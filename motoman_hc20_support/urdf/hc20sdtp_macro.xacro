<?xml version="1.0" ?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:macro name="motoman_hc20sdtp" params="prefix robot_tf_frame_prefix:=hc20sdtp/">
    <xacro:include filename="$(find motoman_resources)/urdf/common_materials.xacro"/>

    <!-- link list -->
    <link name="${prefix}base_link">
      <visual>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/visual/base_link.dae"/>
        </geometry>
        <xacro:material_yaskawa_blue/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/collision/base_link.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}link_1_s">
      <visual>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/visual/link_1_s.dae"/>
        </geometry>
        <xacro:material_yaskawa_blue/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/collision/link_1_s.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}link_2_l">
      <visual>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/visual/link_2_l.dae"/>
        </geometry>
        <xacro:material_yaskawa_blue/>
      </visual>
      <collision>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/collision/link_2_l.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}link_3_u">
      <visual>
        <origin xyz="0 0 0" rpy="0 ${radians(90)} 0"/>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/visual/link_3_u.dae"/>
        </geometry>
        <xacro:material_yaskawa_blue/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 ${radians(90)} 0"/>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/collision/link_3_u.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}link_4_r">
      <visual>
        <origin xyz="0 0 0" rpy="0 ${radians(90)} 0"/>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/visual/link_4_r.dae"/>
        </geometry>
        <xacro:material_yaskawa_blue/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 ${radians(90)} 0"/>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/collision/link_4_r.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}link_5_b">
      <visual>
        <origin xyz="0 0 0" rpy="0 ${radians(90)} 0"/>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/visual/link_5_b.dae"/>
        </geometry>
        <xacro:material_yaskawa_blue/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 ${radians(90)} 0"/>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/collision/link_5_b.stl"/>
        </geometry>
      </collision>
    </link>
    <link name="${prefix}link_6_t">
      <visual>
        <origin xyz="0 0 0" rpy="0 ${radians(90)} 0"/>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/visual/link_6_t.dae"/>
        </geometry>
        <xacro:material_yaskawa_blue/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 ${radians(90)} 0"/>
        <geometry>
          <mesh filename="package://motoman_hc20_support/meshes/hc20sdtp/collision/link_6_t.stl"/>
       </geometry>
      </collision>
    </link>
    <link name="${prefix}tool0"/>
    <!-- end of link list -->

    <!-- joint list -->
    <joint name="${prefix}joint_1_s" type="revolute">
      <parent link="${prefix}base_link"/>
      <child link="${prefix}link_1_s"/>
      <origin xyz="0 0 0.360" rpy="0 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="${radians(-210)}" upper="${radians(210)}" effort="368.48" velocity="${radians(105)}"/>
    </joint>
    <joint name="${prefix}joint_2_l" type="revolute">
      <parent link="${prefix}link_1_s"/>
      <child link="${prefix}link_2_l"/>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <axis xyz="0 1 0" />
      <limit lower="${radians(-180)}" upper="${radians(180)}" effort="368.48" velocity="${radians(90)}"/>
    </joint>
    <joint name="${prefix}joint_3_u" type="revolute">
      <parent link="${prefix}link_2_l"/>
      <child link="${prefix}link_3_u"/>
      <origin xyz="0 0 0.725" rpy="0 -1.57 0" />
      <axis xyz="0 -1 0" />
      <limit lower="${radians(-290)}" upper="${radians(290)}" effort="141.12" velocity="${radians(135)}"/>
    </joint>
    <joint name="${prefix}joint_4_r" type="revolute">
      <parent link="${prefix}link_3_u"/>
      <child link="${prefix}link_4_r"/>
      <origin xyz="0 0 -0.475" rpy="0 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="${radians(-210)}" upper="${radians(210)}" effort="58.8" velocity="${radians(130)}"/>
    </joint>
    <joint name="${prefix}joint_5_b" type="revolute">
      <parent link="${prefix}link_4_r"/>
      <child link="${prefix}link_5_b"/>
      <origin xyz="0 0.185 0" rpy="0 0 0" />
      <axis xyz="0 -1 0" />
      <limit lower="${radians(-180)}" upper="${radians(180)}" effort="58.8" velocity="${radians(180)}"/>
    </joint>
    <joint name="${prefix}joint_6_t" type="revolute">
      <parent link="${prefix}link_5_b"/>
      <child link="${prefix}link_6_t"/>
      <origin xyz="0 0 -0.200" rpy="0 0 ${radians(90)}" />
      <axis xyz="0 0 1" />
      <limit lower="${radians(-210)}" upper="${radians(210)}" effort="29.4" velocity="${radians(180)}"/>
    </joint>
    <joint name="${prefix}joint_6_t-tool0" type="fixed">
      <origin xyz="0 0 0" rpy="${pi} 0 ${radians(-90)}"/>
      <parent link="${prefix}link_6_t"/>
      <child link="${prefix}tool0"/>
    </joint>
    <!-- end of joint list -->

    <!-- ROS base_link to Robot Manufacturer World Coordinates transform -->
    <link name="${prefix}base" />
    <joint name="${prefix}base_link-base" type="fixed">
      <origin xyz="0 0 0.360" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}base"/>
    </joint>

    <!-- Motoman world frame published from the robot is the same as the base -->
    <link name="${robot_tf_frame_prefix}world" />
    <joint name="${prefix}base_${robot_tf_frame_prefix}world" type="fixed">
        <origin xyz="0 0 0.0" rpy="0 0 0"/>
        <parent link="${prefix}base"/>
        <child link="${robot_tf_frame_prefix}world"/>
    </joint>

  </xacro:macro>
</robot>
